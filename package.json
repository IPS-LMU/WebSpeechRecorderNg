  "scripts": {
    "ng": "ng",
    "module_transpile": "ngc -p tsconfig-module-aot.json",
    "rollup_module": "rollup -c",
    "minify_module": "uglifyjs dist/module/bundles/speechrecorder.umd.js --screw-ie8 --compress --mangle --comments --output dist/module/bundles/speechrecorder.umd.min.js",
    "prepare_module_package": "cp module_package.json dist/module/package.json",
    "build_module": "npm run prepare_module_package && npm run module_transpile && npm run rollup_module && npm run minify_module",
    "pack_module": "cd dist/module;npm pack",
    "publish_module": "cd dist/module;rm speechrecorderng-*.tgz;npm publish",
    "start": "ng serve",
    "build": "ng build",
    "build_klausj_www": "ng build --dev --base-href='/~klausj/demos/wsr/ng/dist/'",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.3.6",
