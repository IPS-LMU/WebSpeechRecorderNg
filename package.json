  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "apply_version": "node bin/apply_version.js",
    "module_transpile": "npm run apply_version && ngc -p tsconfig-module-aot.json",
    "rollup_module": "rollup -c",
    "minify_module": "uglifyjs dist/module/bundles/speechrecorder.umd.js --screw-ie8 --compress --mangle --comments --output dist/module/bundles/speechrecorder.umd.min.js",
    "prepare_module_package": "cp module_package.json dist/module/package.json",
    "build_module": "npm run module_transpile && npm run rollup_module && npm run minify_module && npm run prepare_module_package",
    "pack_module": "cd dist/module;npm pack",
    "publish_module": "cd dist/module;rm speechrecorderng-*.tgz;npm publish",
    "start": "ng serve",
    "build": "ng build",
    "build_devel_klausj_www": "ng build --dev --base-href='/~klausj/demos/wsr/ng_devel/dist/'",
    "install_devel_klausj_www": "rsync --delete -a dist /vdata/users_public_html/klausj/www/demos/wsr/ng_devel/ && cp htaccess_www_klausj.txt /vdata/users_public_html/klausj/www/demos/wsr/ng_devel/dist/.htaccess",
    "build_install_devel_klausj_www": "npm run build_devel_klausj_www && npm run install_devel_klausj_www",
    "build_klausj_www": "npm run apply_version && ng build --dev --base-href='/~klausj/demos/wsr/ng/dist/'",
    "install_klausj_www": "rsync --delete -a dist /vdata/users_public_html/klausj/www/demos/wsr/ng/ && cp htaccess_www_klausj.txt /vdata/users_public_html/klausj/www/demos/wsr/ng/dist/.htaccess",
    "build_install_klausj_www": "npm run build_klausj_www && npm run install_klausj_www",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.4.4",
    "@angular/cdk": "^2.0.0-beta.12",
    "@angular/common": "^4.4.4",
    "@angular/compiler": "^4.4.4",
    "@angular/core": "^4.4.4",
    "@angular/flex-layout": "^2.0.0-rc.1",
    "@angular/forms": "^4.4.4",
    "@angular/http": "^4.4.4",
    "@angular/material": "^2.0.0-beta.12",
    "@angular/platform-browser": "^4.4.4",
    "@angular/platform-browser-dynamic": "^4.4.4",
    "@angular/router": "^4.4.4",
    "core-js": "^2.5.1",
    "intl": "^1.2.5",
    "rxjs": "^5.4.3",
    "webpack": "^3.6.0",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@angular/cli": "^1.4.5",
    "@angular/compiler-cli": "^4.4.4",
    "@angular/language-service": "^4.4.4",
    "@types/jasmine": "^2.6.0",
    "@types/node": "^6.0.89",
    "codelyzer": "~3.0.1",
    "jasmine-core": "^2.8.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "node-sass": "^4.5.3",
    "protractor": "~5.1.2",
    "rollup": "^0.45.2",
    "ts-node": "^3.3.0",
    "tslint": "~5.3.2",
    "typescript": "^2.5.3",
    "uglify-js": "^2.8.29"
  }
}
